.panel {
  color: #ffffff;
  background: #353535;

  header {
    background-color: #1e1e1e;
    border-top: 1px solid #353535;
    font-weight: bold;
    padding-left: 5px;
    align-items: center;
    font-size: 1rem;
    height: 2rem;
    letter-spacing: 0.62px;
  }

  hr {
    margin: 5px 0 5px 0;
  }
}

.padded {
  padding: 10px;
}

.formRadio {
  margin-bottom: 1.6rem;

  .inputRadio {
    margin-bottom: 0.8rem;
  }
}

