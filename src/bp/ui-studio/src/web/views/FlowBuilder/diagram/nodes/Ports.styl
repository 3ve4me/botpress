.topPort {
  :global(.port) {
    margin: 0 auto;
    border: none;
    background: rgba(0, 0, 0, 0.2);

    &:global(.selected) {
      background: rgba(0, 0, 0, 0.5);
    }
  }
}

.startPort :global(.port) {
  background-color: lime !important;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}

.endPort :global(.port) {
  background-color: #e62eea !important;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

.missingConnection :global(.port) {
  background-color: red !important;
}

.subflowPort :global(.port) {
  background-color: blue !important;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

.returnPort :global(.port) {
  background-color: darkcyan !important;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

.sectionTransition {
  position: absolute;
  right: -20px;
  top: 3px;
  width: 20px;
}

.sectionTransition.portLabel {
  width: 150px;
  right: -150px;
}

.startPort {
  height: 15px;
}

.portLabel .label {
  position: relative;
  padding: 5px;
  right: -20px;
  display: inline;
  border-radius: 3px;
  top: -16px;
  background: rgba(0, 0, 0, 0.08);
}

.subflowPort .label {
  color: blue;
}

.returnPort .label {
  color: darkcyan;
}

.endPort .label {
  color: #e62eea;
}

.startPort .label {
  color: green;
  font-size: 11px;
  right: -83px;
  top: -40px;
}

.missingConnection :global(.port) {
  background-color: red !important;
}